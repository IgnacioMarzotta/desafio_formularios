<h1>Sales#new</h1>
<p>Find me in app/views/sales/new.html.erb</p>

<%= form_with model: Sale.new, local: true do |f| %>
    <%= f.label :detail%>
    <br>
    <%= f.text_area :detail %>
    <br>
    <%= f.label :category%>
    <br>
    <%= f.number_field :category %>
    <br>
    <%= f.label :value%>
    <br>
    <%= f.number_field :value %>
    <br>
    <%= f.label :discount%>
    <br>
    <%= f.number_field :discount %>
    <br>
    <%= f.label :tax%>
    <%= f.check_box :tax %>
    <br>
    <%= f.submit "Crear" %>
<% end %>